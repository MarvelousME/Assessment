@model Phonebook.Web.ViewModels.PhonebookDetailViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" href="/phonebook" role="button">
    <i class="material-icons">arrow_back</i>
    Back to list
</a>

<h4>
    @Model.FirstName @Model.LastName
</h4>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header" data-background-color="purple">
                    <h4 class="title">Contact</h4>
                    <p class="category">View the detail of the contact (Click on Contact Number to Call)</p>
                </div>
                <div class="card-content">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <table id="PhonebookEntryTable" style="width:100%">
                            <tr>
                                @for (int i = 0; i < Model.Numbers.Count(); i++)
                                {
                                    <b><p>@Model.Numbers[i].Description</p></b>
                                    <p><a href="tel:@Model.Numbers[i].Number"> @Model.Numbers[i].Number</a></p>
                                    <hr/>
                                }
                            </tr>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>

